{
	"compilerOptions": {
		"target": "es2015",
		"module": "es6",
		"declarationDir": "./dist",
		"outDir": "./dist",
		"declaration": true,
		"noImplicitThis": true,
		"noEmitOnError": true,
		"lib": [
			"es5",
			"es6",
			"dom",
			"es2015"
		],
		"importHelpers": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"svelte/*": [
				"./src/*"
			]
		},
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist"
	]
}
